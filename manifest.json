{
    "manifest_version": 2,
    "name": "Timezone Extension",
    "version": "1.0",
    "description": "A simple Chrome extension that displays a 'Hello World' popup.",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      }
    },
    "icons": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "manifest_version": 2
  }